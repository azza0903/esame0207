{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build DiarioAttivita",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "DiarioAttivita.cpp",
                "-o",
                "DiarioAttivita"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ générer le fichier actif",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Tâche générée par le débogueur."
        }
    ]
}